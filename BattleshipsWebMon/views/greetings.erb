<div>
  <% if @visitor == '' %>
    <div>
      Please enter a name!
      <form action="/greetings">
        <input type="text" name="name">
        <input type="submit" value="Submit">
      </form>
    </div>
  <% else %>
    <div>
      Greetings <%= @visitor %>!<br>
        <a href="/board">Create your board!</a>
    </div>
  <% end %>
</div>
