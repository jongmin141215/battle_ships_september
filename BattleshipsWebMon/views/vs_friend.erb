<div style='display: inline-block'>
  <h2 style="margin-left: 95px">Opponent's Board</h2>
  <table style="width:375px; margin-left: 30px">
    <tr>
      <% (1..10).to_a.each do |x| %>
        <td> <%= x %> </td>
      <% end %>
    </tr>
  </table>
  <div style='display: inline-block; height: 370px'>
    <% ('A'..'J').to_a.each do |x| %>
      <div style="height: 38px"><%= x %></div>
    <% end %>
  </div>
  <div style='display: inline-block; border: 2px solid white; height:370px; width:385px'>
    <% $opponent_board.grid.each do |cell| %>
      <% if cell[1].content.is_a? Water %>
        <% if cell[1].hit == true %>
          <div style='display: inline-block; border: 1px solid white; height:30px; width:30px; background-color:white; border-radius: 5px'>
            <% cell %>
          </div>
        <% else %>
          <div style='display: inline-block; border: 1px solid white; height:30px; width:30px; background-color:#c6e2ff; border-radius: 5px'>
            <% cell %>
          </div>
        <% end %>
      <% else %>
        <% if cell[1].hit == true %>
          <div style='display: inline-block; border: 1px solid white; height:30px; width:30px; background-color:red; border-radius: 5px'>
            <% cell %>
          </div>
        <% else %>
          <div style='display: inline-block; border: 1px solid white; height:30px; width:30px; background-color:yellow; border-radius: 5px'>
            <% cell %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>


